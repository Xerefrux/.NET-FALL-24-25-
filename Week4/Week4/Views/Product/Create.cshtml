
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form method="post">
    Name: <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name" />
    Description: <input type="text" name="Description" value="@Model.Description" class="form-control" placeholder="Description" />
    Price: <input type="text" name="Price" value="@Model.Price" class="form-control" placeholder="Price" />
    Stock Quantity: <input type="text" name="StockQuantity" value="@Model.StockQuantity" class="form-control" placeholder="Stock Quantity" />
    Category: <input type="text" name="Category" value="@Model.Category" class="form-control" placeholder="Category" />
    <input type="submit" value="Create" class="btn btn-success" />

</form>
